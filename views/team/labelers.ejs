<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/labeler.css">
<link rel="stylesheet" href="/css/table.css">
</head>
    <body>
        <header>
            <%- include("../includes/navigation.ejs") %>
        </header>
        <main>
            <div class="container">

            
            <div class="row">
              <%- include("../includes/side-nav.ejs") %>
                <div class=" main col-9 ">
                    <div class="info">
                        <div class="h2-con w-100">
                          <h2>My Team</h2>
                        </div>
                        <div class="scroller">
                        <table>
                            <tr>
                                <th>C</th>
                                <th>LabelerID</th>
                                <th>Name</th>
                                <th>#</th>
                                <th>#</th>

                            </tr>
                            <% labelers.sort((function(a, b) {
                                return   a.device - b.device;
                              })).forEach(el => {%>
                            <tr>
                                <td>C-<%= el.device %></td>
                                <td><a href="/labeler-details/<%= el._id %>"><%= el.username %></a></td>
                                <td><%= el.name %></td>
                                <td><a href="/edit-labeler/<%= el._id %>?edit=true" class="edit">edit</a></td>
                                <td><form action="/delete-labeler" method="post"><input type="hidden" name="labelerId" value="<%= el._id %>"><button class="delete">Delete</button></form></td>
                            </tr>
                            <% }) %>
                        </table>
                        <button  class="add"><a href="/create-labeler">+</a></button>
                            </div>
                      </div>
                </div>
            </div>
        </div>
        </main>
    </body>
<%- include("../includes/end.ejs") %>